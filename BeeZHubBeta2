-- Global States
local WindUI = {}
local isUIVisible = true
local autoFarmEnabled = false
local currentFarmMode = "Auto"
local farmStats = {
    kills = 0,
    materials = 0,
    berries = 0,
    exp = 0,
    startTime = 0
}
local farmConnection = nil

-- Táº¡o hiá»‡u á»©ng Wind UI
local function createWindEffect(parent)
    local effect = Instance.new("Frame")
    effect.Name = "WindEffect"
    effect.Size = UDim2.new(1, 0, 1, 0)
    effect.BackgroundTransparency = 1
    effect.ClipsDescendants = true
    effect.Parent = parent
    
    -- Táº¡o cÃ¡c Ä‘Æ°á»ng chuyá»ƒn Ä‘á»™ng
    for i = 1, 3 do
        local line = Instance.new("Frame")
        line.Name = "WindLine"..i
        line.Size = UDim2.new(0, 2, 1, 0)
        line.Position = UDim2.new(0, i * 50, 0, 0)
        line.BackgroundColor3 = WIND_COLORS.primary
        line.BackgroundTransparency = 0.7
        line.BorderSizePixel = 0
        line.Parent = effect
        
        -- Animation
        spawn(function()
            while true do
                TweenService:Create(line, TweenInfo.new(2, Enum.EasingStyle.Linear), {
                    Position = UDim2.new(1, i * 50, 0, 0)
                }):Play()
                wait(2)
                line.Position = UDim2.new(0, i * 50, 0, 0)
                wait(0.5)
            end
        end)
    end
    
    return effect
end

-- Táº¡o card vá»›i hiá»‡u á»©ng Wind
local function createWindCard(size, position, color)
    local card = Instance.new("Frame")
    card.Name = "WindCard"
    card.Size = size
    card.Position = position
    card.BackgroundColor3 = WIND_THEME.card
    card.BackgroundTransparency = 0
    
    -- Corner
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 12)
    corner.Parent = card
    
    -- Stroke vá»›i gradient
    local stroke = Instance.new("UIStroke")
    stroke.Color = color
    stroke.Thickness = 2
    stroke.Transparency = 0.5
    stroke.Parent = card
    
    -- Glow effect
    local glow = Instance.new("ImageLabel")
    glow.Name = "Glow"
    glow.Size = UDim2.new(1, 20, 1, 20)
    glow.Position = UDim2.new(0, -10, 0, -10)
    glow.BackgroundTransparency = 1
    glow.Image = "rbxassetid://8992236361"
    glow.ImageColor3 = color
    glow.ImageTransparency = 0.8
    glow.ScaleType = Enum.ScaleType.Slice
    glow.SliceCenter = Rect.new(100, 100, 100, 100)
    glow.ZIndex = -1
    glow.Parent = card
    
    -- Inner glow
    local innerGlow = Instance.new("Frame")
    innerGlow.Name = "InnerGlow"
    innerGlow.Size = UDim2.new(1, 0, 1, 0)
    innerGlow.BackgroundTransparency = 1
    innerGlow.Parent = card
    
    local gradient = Instance.new("UIGradient")
    gradient.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0, color),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 0, 0))
    })
    gradient.Rotation = 90
    gradient.Parent = innerGlow
    
    return card
end

-- Táº¡o Wind Button
local function createWindButton(text, icon, color, callback)
    local button = Instance.new("TextButton")
    button.Name = "WindButton"
    button.AutoButtonColor = false
    button.BackgroundColor3 = WIND_THEME.surface
    button.BackgroundTransparency = 0.9
    button.Text = ""
    
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 10)
    corner.Parent = button
    
    local stroke = Instance.new("UIStroke")
    stroke.Color = color
    stroke.Thickness = 1.5
    stroke.Transparency = 0.7
    stroke.Parent = button
    
    -- Content
    local content = Instance.new("Frame")
    content.Name = "Content"
    content.Size = UDim2.new(1, 0, 1, 0)
    content.BackgroundTransparency = 1
    content.Parent = button
    
    if icon then
        local iconLabel = Instance.new("TextLabel")
        iconLabel.Name = "Icon"
        iconLabel.Size = UDim2.new(0, 30, 1, 0)
        iconLabel.Position = UDim2.new(0, 10, 0, 0)
        iconLabel.BackgroundTransparency = 1
        iconLabel.Text = icon
        iconLabel.TextColor3 = color
        iconLabel.TextSize = 20
        iconLabel.Font = Enum.Font.GothamBold
        iconLabel.TextXAlignment = Enum.TextXAlignment.Left
        iconLabel.Parent = content
    end
    
    local textLabel = Instance.new("TextLabel")
    textLabel.Name = "Text"
    textLabel.Size = UDim2.new(1, icon and -50 or -20, 1, 0)
    textLabel.Position = icon and UDim2.new(0, 50, 0, 0) or UDim2.new(0, 10, 0, 0)
    textLabel.BackgroundTransparency = 1
    textLabel.Text = text
    textLabel.TextColor3 = WIND_THEME.text
    textLabel.TextSize = 14
    textLabel.Font = Enum.Font.GothamSemibold
    textLabel.TextXAlignment = Enum.TextXAlignment.Left
    textLabel.Parent = content
    
    -- Hover Effects
    button.MouseEnter:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.2), {
            BackgroundTransparency = 0.8,
            Size = button.Size + UDim2.new(0, 4, 0, 4)
        }):Play()
        TweenService:Create(stroke, TweenInfo.new(0.2), {
            Transparency = 0.3,
            Thickness = 2
        }):Play()
    end)
    
    button.MouseLeave:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.2), {
            BackgroundTransparency = 0.9,
            Size = button.Size - UDim2.new(0, 4, 0, 4)
        }):Play()
        TweenService:Create(stroke, TweenInfo.new(0.2), {
            Transparency = 0.7,
            Thickness = 1.5
        }):Play()
    end)
    
    -- Click Effects
    button.MouseButton1Down:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.1), {
            BackgroundTransparency = 0.7
        }):Play()
    end)
    
    button.MouseButton1Up:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.1), {
            BackgroundTransparency = 0.8
        }):Play()
        if callback then
            callback()
        end
    end)
    
    return button
end

-- Táº¡o Mode Card
local function createModeCard(mode, config, isActive)
    local card = Instance.new("TextButton")
    card.Name = mode .. "Card"
    card.Size = UDim2.new(0, 160, 0, 120)
    card.AutoButtonColor = false
    card.BackgroundColor3 = WIND_THEME.card
    card.BackgroundTransparency = 0.3
    
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 16)
    corner.Parent = card
    
    -- Active Glow
    if isActive then
        local glow = Instance.new("ImageLabel")
        glow.Name = "ActiveGlow"
        glow.Size = UDim2.new(1, 20, 1, 20)
        glow.Position = UDim2.new(0, -10, 0, -10)
        glow.BackgroundTransparency = 1
        glow.Image = "rbxassetid://8992236361"
        glow.ImageColor3 = config.color
        glow.ImageTransparency = 0.6
        glow.ScaleType = Enum.ScaleType.Slice
        glow.SliceCenter = Rect.new(100, 100, 100, 100)
        glow.ZIndex = -1
        glow.Parent = card
    end
    
    -- Icon
    local icon = Instance.new("TextLabel")
    icon.Name = "Icon"
    icon.Size = UDim2.new(1, 0, 0, 60)
    icon.Position = UDim2.new(0, 0, 0, 10)
    icon.BackgroundTransparency = 1
    icon.Text = config.icon
    icon.TextColor3 = config.color
    icon.TextSize = 36
    icon.Font = Enum.Font.GothamBold
    icon.Parent = card
    
    -- Mode Name
    local name = Instance.new("TextLabel")
    name.Name = "Name"
    name.Size = UDim2.new(1, 0, 0, 30)
    name.Position = UDim2.new(0, 0, 0, 70)
    name.BackgroundTransparency = 1
    name.Text = config.name
    name.TextColor3 = WIND_THEME.text
    name.TextSize = 16
    name.Font = Enum.Font.GothamSemibold
    name.Parent = card
    
    -- Description
    local desc = Instance.new("TextLabel")
    desc.Name = "Desc"
    desc.Size = UDim2.new(1, 0, 0, 20)
    desc.Position = UDim2.new(0, 0, 0, 95)
    desc.BackgroundTransparency = 1
    desc.Text = config.desc
    desc.TextColor3 = WIND_THEME.subtext
    desc.TextSize = 12
    desc.Font = Enum.Font.Gotham
    desc.Parent = card
    
    -- Hover Effects
    card.MouseEnter:Connect(function()
        TweenService:Create(card, TweenInfo.new(0.3), {
            BackgroundTransparency = 0.1
        }):Play()
    end)
    
    card.MouseLeave:Connect(function()
        if not isActive then
            TweenService:Create(card, TweenInfo.new(0.3), {
                BackgroundTransparency = 0.3
            }):Play()
        end
    end)
    
    return card
end

-- Táº¡o Stat Card
local function createStatCard(title, value, icon, color)
    local card = Instance.new("Frame")
    card.Name = title .. "Stat"
    card.Size = UDim2.new(0, 180, 0, 90)
    card.BackgroundColor3 = WIND_THEME.card
    card.BackgroundTransparency = 0.4
    
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 14)
    corner.Parent = card
    
    -- Icon Background
    local iconBg = Instance.new("Frame")
    iconBg.Name = "IconBg"
    iconBg.Size = UDim2.new(0, 50, 0, 50)
    iconBg.Position = UDim2.new(0, 15, 0.5, -25)
    iconBg.BackgroundColor3 = color
    iconBg.BackgroundTransparency = 0.8
    
    local iconCorner = Instance.new("UICorner")
    iconCorner.CornerRadius = UDim.new(0, 12)
    iconCorner.Parent = iconBg
    
    -- Icon
    local iconLabel = Instance.new("TextLabel")
    iconLabel.Name = "Icon"
    iconLabel.Size = UDim2.new(1, 0, 1, 0)
    iconLabel.BackgroundTransparency = 1
    iconLabel.Text = icon
    iconLabel.TextColor3 = WIND_THEME.text
    iconLabel.TextSize = 24
    iconLabel.Font = Enum.Font.GothamBold
    iconLabel.Parent = iconBg
    
    iconBg.Parent = card
    
    -- Title
    local titleLabel = Instance.new("TextLabel")
    titleLabel.Name = "Title"
    titleLabel.Size = UDim2.new(0, 100, 0, 20)
    titleLabel.Position = UDim2.new(0, 80, 0, 20)
    titleLabel.BackgroundTransparency = 1
    titleLabel.Text = title
    titleLabel.TextColor3 = WIND_THEME.subtext
    titleLabel.TextSize = 12
    titleLabel.Font = Enum.Font.Gotham
    titleLabel.TextXAlignment = Enum.TextXAlignment.Left
    titleLabel.Parent = card
    
    -- Value
    local valueLabel = Instance.new("TextLabel")
    valueLabel.Name = "Value"
    valueLabel.Size = UDim2.new(0, 100, 0, 40)
    valueLabel.Position = UDim2.new(0, 80, 0, 35)
    valueLabel.BackgroundTransparency = 1
    valueLabel.Text = tostring(value)
    valueLabel.TextColor3 = WIND_THEME.text
    valueLabel.TextSize = 28
    valueLabel.Font = Enum.Font.GothamBold
    valueLabel.TextXAlignment = Enum.TextXAlignment.Left
    valueLabel.Parent = card
    
    return card, valueLabel
end

-- Táº¡o WIND UI chÃ­nh
local function createWindUI()
    -- ScreenGui
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "BeeZHub_WindUI"
    screenGui.ResetOnSpawn = false
    screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    screenGui.Parent = player.PlayerGui
    
    -- Main Container
    local mainContainer = Instance.new("Frame")
    mainContainer.Name = "MainContainer"
    mainContainer.Size = UDim2.new(0, 900, 0, 600)
    mainContainer.Position = UDim2.new(0.5, -450, 0.5, -300)
    mainContainer.BackgroundColor3 = WIND_THEME.background
    mainContainer.BackgroundTransparency = 0.1
    mainContainer.ClipsDescendants = true
    
    local containerCorner = Instance.new("UICorner")
    containerCorner.CornerRadius = UDim.new(0, 24)
    containerCorner.Parent = mainContainer
    
    -- Background Blur
    local blur = Instance.new("BlurEffect")
    blur.Size = 10
    blur.Parent = Lighting
    
    -- Header
    local header = Instance.new("Frame")
    header.Name = "Header"
    header.Size = UDim2.new(1, 0, 0, 70)
    header.BackgroundColor3 = WIND_THEME.surface
    header.BackgroundTransparency = 0.2
    
    local headerCorner = Instance.new("UICorner")
    headerCorner.CornerRadius = UDim.new(0, 24)
    headerCorner.Parent = header
    
    -- Logo
    local logoContainer = Instance.new("Frame")
    logoContainer.Name = "LogoContainer"
    logoContainer.Size = UDim2.new(0, 250, 1, 0)
    logoContainer.BackgroundTransparency = 1
    
    local logo = Instance.new("TextLabel")
    logo.Name = "Logo"
    logo.Size = UDim2.new(1, 0, 1, 0)
    logo.BackgroundTransparency = 1
    logo.Text = "ğŸ BeeZ Hub | WIND UI"
    logo.TextColor3 = WIND_COLORS.primary
    logo.TextSize = 28
    logo.Font = Enum.Font.GothamBold
    logo.TextXAlignment = Enum.TextXAlignment.Left
    logo.Position = UDim2.new(0, 30, 0, 0)
    logo.Parent = logoContainer
    
    -- Logo Gradient
    local logoGradient = Instance.new("UIGradient")
    logoGradient.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0, WIND_COLORS.primary),
        ColorSequenceKeypoint.new(1, WIND_COLORS.accent)
    })
    logoGradient.Parent = logo
    
    local subtitle = Instance.new("TextLabel")
    subtitle.Name = "Subtitle"
    subtitle.Size = UDim2.new(1, 0, 0, 20)
    subtitle.Position = UDim2.new(0, 30, 1, -25)
    subtitle.BackgroundTransparency = 1
    subtitle.Text = "Auto Farm System â€¢ Blox Fruits"
    subtitle.TextColor3 = WIND_THEME.subtext
    subtitle.TextSize = 12
    subtitle.Font = Enum.Font.Gotham
    subtitle.TextXAlignment = Enum.TextXAlignment.Left
    subtitle.Parent = logoContainer
    
    logoContainer.Parent = header
    
    -- Control Buttons
    local controls = Instance.new("Frame")
    controls.Name = "Controls"
    controls.Size = UDim2.new(0, 150, 1, 0)
    controls.Position = UDim2.new(1, -160, 0, 0)
    controls.BackgroundTransparency = 1
    
    -- Hide Button
    local hideButton = createWindButton("", "ğŸ—•", WIND_COLORS.warning, function()
        toggleUIVisibility()
    end)
    hideButton.Size = UDim2.new(0, 40, 0, 40)
    hideButton.Position = UDim2.new(0, 60, 0.5, -20)
    hideButton.Parent = controls
    
    -- Close Button
    local closeButton = createWindButton("", "âœ•", WIND_COLORS.danger, function()
        screenGui.Enabled = false
    end)
    closeButton.Size = UDim2.new(0, 40, 0, 40)
    closeButton.Position = UDim2.new(0, 10, 0.5, -20)
    closeButton.Parent = controls
    
    controls.Parent = header
    header.Parent = mainContainer
    
    -- Content Area
    local contentArea = Instance.new("Frame")
    contentArea.Name = "ContentArea"
    contentArea.Size = UDim2.new(1, -40, 1, -110)
    contentArea.Position = UDim2.new(0, 20, 0, 90)
    contentArea.BackgroundTransparency = 1
    contentArea.Parent = mainContainer
    
    -- Left Panel - Farm Modes
    local leftPanel = Instance.new("Frame")
    leftPanel.Name = "LeftPanel"
    leftPanel.Size = UDim2.new(0, 300, 1, 0)
    leftPanel.BackgroundTransparency = 1
    leftPanel.Parent = contentArea
    
    local modesTitle = Instance.new("TextLabel")
    modesTitle.Name = "ModesTitle"
    modesTitle.Size = UDim2.new(1, 0, 0, 40)
    modesTitle.Position = UDim2.new(0, 0, 0, 0)
    modesTitle.BackgroundTransparency = 1
    modesTitle.Text = "ğŸŒªï¸ FARM MODES"
    modesTitle.TextColor3 = WIND_THEME.text
    modesTitle.TextSize = 20
    modesTitle.Font = Enum.Font.GothamBold
    modesTitle.TextXAlignment = Enum.TextXAlignment.Left
    modesTitle.Parent = leftPanel
    
    -- Mode Cards Container
    local modesContainer = Instance.new("ScrollingFrame")
    modesContainer.Name = "ModesContainer"
    modesContainer.Size = UDim2.new(1, 0, 1, -50)
    modesContainer.Position = UDim2.new(0, 0, 0, 50)
    modesContainer.BackgroundTransparency = 1
    modesContainer.ScrollBarThickness = 4
    modesContainer.CanvasSize = UDim2.new(0, 0, 0, 650)
    modesContainer.Parent = leftPanel
    
    local modesLayout = Instance.new("UIListLayout")
    modesLayout.Padding = UDim.new(0, 15)
    modesLayout.Parent = modesContainer
    
    -- Táº¡o mode cards
    local modeCards = {}
    for modeName, config in pairs(FARM_CONFIGS) do
        local card = createModeCard(modeName, config, modeName == currentFarmMode)
        card.Parent = modesContainer
        
        card.MouseButton1Click:Connect(function()
            changeFarmMode(modeName)
        end)
        
        modeCards[modeName] = card
    end
    
    -- Right Panel - Main Content
    local rightPanel = Instance.new("Frame")
    rightPanel.Name = "RightPanel"
    rightPanel.Size = UDim2.new(1, -320, 1, 0)
    rightPanel.Position = UDim2.new(0, 320, 0, 0)
    rightPanel.BackgroundTransparency = 1
    rightPanel.Parent = contentArea
    
    -- Status Card
    local statusCard = createWindCard(
        UDim2.new(1, 0, 0, 120),
        UDim2.new(0, 0, 0, 0),
        autoFarmEnabled and WIND_COLORS.success or WIND_COLORS.danger
    )
    statusCard.Name = "StatusCard"
    statusCard.Parent = rightPanel
    
    local statusIcon = Instance.new("TextLabel")
    statusIcon.Name = "StatusIcon"
    statusIcon.Size = UDim2.new(0, 80, 0, 80)
    statusIcon.Position = UDim2.new(0, 20, 0, 20)
    statusIcon.BackgroundTransparency = 1
    statusIcon.Text = autoFarmEnabled and "âš¡" or "â­•"
    statusIcon.TextColor3 = autoFarmEnabled and WIND_COLORS.success or WIND_COLORS.danger
    statusIcon.TextSize = 48
    statusIcon.Font = Enum.Font.GothamBold
    statusIcon.Parent = statusCard
    
    local statusText = Instance.new("TextLabel")
    statusText.Name = "StatusText"
    statusText.Size = UDim2.new(0, 400, 0, 40)
    statusText.Position = UDim2.new(0, 120, 0, 20)
    statusText.BackgroundTransparency = 1
    statusText.Text = autoFarmEnabled and "SYSTEM ACTIVE" or "SYSTEM IDLE"
    statusText.TextColor3 = autoFarmEnabled and WIND_COLORS.success or WIND_COLORS.danger
    statusText.TextSize = 24
    statusText.Font = Enum.Font.GothamBold
    statusText.TextXAlignment = Enum.TextXAlignment.Left
    statusText.Parent = statusCard
    
    local statusDesc = Instance.new("TextLabel")
    statusDesc.Name = "StatusDesc"
    statusDesc.Size = UDim2.new(0, 400, 0, 30)
    statusDesc.Position = UDim2.new(0, 120, 0, 60)
    statusDesc.BackgroundTransparency = 1
    statusDesc.Text = autoFarmEnabled and 
        "Farming in " .. currentFarmMode .. " mode" : 
        "Select a mode and press START"
    statusDesc.TextColor3 = WIND_THEME.subtext
    statusDesc.TextSize = 16
    statusDesc.Font = Enum.Font.Gotham
    statusDesc.TextXAlignment = Enum.TextXAlignment.Left
    statusDesc.Parent = statusCard
    
    -- Stats Grid
    local statsGrid = Instance.new("Frame")
    statsGrid.Name = "StatsGrid"
    statsGrid.Size = UDim2.new(1, 0, 0, 200)
    statsGrid.Position = UDim2.new(0, 0, 0, 140)
    statsGrid.BackgroundTransparency = 1
    statsGrid.Parent = rightPanel
    
    -- Táº¡o stat cards
    local statCards = {
        {title = "KILLS", value = farmStats.kills, icon = "ğŸ‘¤", color = WIND_COLORS.danger},
        {title = "MATERIALS", value = farmStats.materials, icon = "ğŸ“¦", color = WIND_COLORS.success},
        {title = "BERRIES", value = farmStats.berries, icon = "ğŸ’°", color = WIND_COLORS.accent},
        {title = "EXP", value = farmStats.exp, icon = "â­", color = WIND_COLORS.primary}
    }
    
    local statValues = {}
    for i = 1, 4 do
        local stat = statCards[i]
        local card, valueLabel = createStatCard(stat.title, stat.value, stat.icon, stat.color)
        card.Position = UDim2.new(((i-1) % 2) * 0.5, 0, math.floor((i-1) / 2) * 0.5, 0)
        card.Parent = statsGrid
        statValues[stat.title] = valueLabel
    end
    
    -- Control Buttons
    local controlButtons = Instance.new("Frame")
    controlButtons.Name = "ControlButtons"
    controlButtons.Size = UDim2.new(1, 0, 0, 70)
    controlButtons.Position = UDim2.new(0, 0, 1, -80)
    controlButtons.BackgroundTransparency = 1
    controlButtons.Parent = rightPanel
    
    -- Start Button
    local startButton = createWindButton("START FARMING", "â–¶ï¸", WIND_COLORS.success, function()
        toggleAutoFarm()
    end)
    startButton.Size = UDim2.new(0.48, 0, 1, 0)
    startButton.Position = UDim2.new(0, 0, 0, 0)
    startButton.Parent = controlButtons
    
    -- Stop Button
    local stopButton = createWindButton("STOP FARMING", "â¹ï¸", WIND_COLORS.danger, function()
        toggleAutoFarm()
    end)
    stopButton.Size = UDim2.new(0.48, 0, 1, 0)
    stopButton.Position = UDim2.new(0.52, 0, 0, 0)
    stopButton.Parent = controlButtons
    
    -- Time Display
    local timeCard = createWindCard(
        UDim2.new(1, 0, 0, 60),
        UDim2.new(0, 0, 1, -150),
        WIND_COLORS.info
    )
    timeCard.Name = "TimeCard"
    timeCard.Parent = rightPanel
    
    local timeIcon = Instance.new("TextLabel")
    timeIcon.Name = "TimeIcon"
    timeIcon.Size = UDim2.new(0, 40, 1, 0)
    timeIcon.Position = UDim2.new(0, 15, 0, 0)
    timeIcon.BackgroundTransparency = 1
    timeIcon.Text = "ğŸ•"
    timeIcon.TextColor3 = WIND_COLORS.info
    timeIcon.TextSize = 24
    timeIcon.Font = Enum.Font.GothamBold
    timeIcon.Parent = timeCard
    
    local timeLabel = Instance.new("TextLabel")
    timeLabel.Name = "TimeLabel"
    timeLabel.Size = UDim2.new(1, -70, 1, 0)
    timeLabel.Position = UDim2.new(0, 70, 0, 0)
    timeLabel.BackgroundTransparency = 1
    timeLabel.Text = "Time: 00:00"
    timeLabel.TextColor3 = WIND_THEME.text
    timeLabel.TextSize = 18
    timeLabel.Font = Enum.Font.GothamSemibold
    timeLabel.TextXAlignment = Enum.TextXAlignment.Left
    timeLabel.Parent = timeCard
    
    -- Main Container vÃ o ScreenGui
    mainContainer.Parent = screenGui
    
    -- Make draggable
    local dragging = false
    local dragStart, startPos
    
    header.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = mainContainer.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            mainContainer.Position = UDim2.new(
                startPos.X.Scale, startPos.X.Offset + delta.X,
                startPos.Y.Scale, startPos.Y.Offset + delta.Y
            )
        end
    end)
    
    -- Return UI components
    return {
        ScreenGui = screenGui,
        MainContainer = mainContainer,
        ModeCards = modeCards,
        StatusCard = statusCard,
        StatusIcon = statusIcon,
        StatusText = statusText,
        StatusDesc = statusDesc,
        StatValues = statValues,
        StartButton = startButton,
        StopButton = stopButton,
        TimeLabel = timeLabel,
        BlurEffect = blur
    }
end

-- Hiá»ƒn thá»‹/áº©n UI
local function toggleUIVisibility()
    isUIVisible = not isUIVisible
    if WindUI.MainContainer then
        WindUI.MainContainer.Visible = isUIVisible
    end
end

-- Cáº­p nháº­t UI
local function updateUI()
    if not WindUI then return end
    
    local statusColor = autoFarmEnabled and WIND_COLORS.success or WIND_COLORS.danger
    local statusIcon = autoFarmEnabled and "âš¡" or "â­•"
    local statusText = autoFarmEnabled and "SYSTEM ACTIVE" or "SYSTEM IDLE"
    local statusDesc = autoFarmEnabled and 
        "Farming in " .. currentFarmMode .. " mode" : 
        "Select a mode and press START"
    
    -- Cáº­p nháº­t status card
    if WindUI.StatusCard then
        local stroke = WindUI.StatusCard:FindFirstChild("UIStroke")
        if stroke then
            stroke.Color = statusColor
        end
    end
    
    if WindUI.StatusIcon then
        WindUI.StatusIcon.Text = statusIcon
        WindUI.StatusIcon.TextColor3 = statusColor
    end
    
    if WindUI.StatusText then
        WindUI.StatusText.Text = statusText
        WindUI.StatusText.TextColor3 = statusColor
    end
    
    if WindUI.StatusDesc then
        WindUI.StatusDesc.Text = statusDesc
    end
    
    -- Cáº­p nháº­t mode cards
    if WindUI.ModeCards then
        for modeName, card in pairs(WindUI.ModeCards) do
            local glow = card:FindFirstChild("ActiveGlow")
            local isActive = modeName == currentFarmMode
            
            if glow then
                glow.Visible = isActive
                if isActive then
                    local config = FARM_CONFIGS[modeName]
                    glow.ImageColor3 = config.color
                end
            end
        end
    end
    
    -- Cáº­p nháº­t stats
    if WindUI.StatValues then
        WindUI.StatValues["KILLS"].Text = tostring(farmStats.kills)
        WindUI.StatValues["MATERIALS"].Text = tostring(farmStats.materials)
        WindUI.StatValues["BERRIES"].Text = tostring(farmStats.berries)
        WindUI.StatValues["EXP"].Text = tostring(farmStats.exp)
    end
    
    -- Cáº­p nháº­t thá»i gian
    if WindUI.TimeLabel and farmStats.startTime > 0 then
        local elapsed = tick() - farmStats.startTime
        local minutes = math.floor(elapsed / 60)
        local seconds = math.floor(elapsed % 60)
        WindUI.TimeLabel.Text = string.format("Time: %02d:%02d", minutes, seconds)
    end
end

-- Báº­t/Táº¯t Auto Farm
local function toggleAutoFarm(mode)
    if mode then
        currentFarmMode = mode
    end
    
    autoFarmEnabled = not autoFarmEnabled
    
    if autoFarmEnabled then
        -- Báº¯t Ä‘áº§u farm
        farmStats.startTime = tick()
        
        -- Báº¯t Ä‘áº§u farm loop
        if farmConnection then
            farmConnection:Disconnect()
        end
        
        farmConnection = RunService.Heartbeat:Connect(function(deltaTime)
            -- Giáº£ láº­p farm logic
            if math.random(1, 10) > 8 then
                farmStats.kills = farmStats.kills + 1
                farmStats.exp = farmStats.exp + 100
                
                if math.random(1, 5) == 1 then
                    farmStats.materials = farmStats.materials + 1
                end
                
                if math.random(1, 10) == 1 then
                    farmStats.berries = farmStats.berries + math.random(100, 1000)
                end
            end
        end)
        
        showNotification("BeeZ Hub", "Báº¯t Ä‘áº§u farm: " .. currentFarmMode, FARM_CONFIGS[currentFarmMode].color)
    else
        -- Dá»«ng farm
        if farmConnection then
            farmConnection:Disconnect()
            farmConnection = nil
        end
        
        showNotification("BeeZ Hub", "ÄÃ£ dá»«ng farm", WIND_COLORS.danger)
    end
    
    updateUI()
    return autoFarmEnabled
end

-- Äá»•i cháº¿ Ä‘á»™ farm
local function changeFarmMode(mode)
    if not FARM_CONFIGS[mode] then return false end
    
    local wasEnabled = autoFarmEnabled
    
    if wasEnabled then
        toggleAutoFarm()
    end
    
    currentFarmMode = mode
    
    if wasEnabled then
        toggleAutoFarm()
    end
    
    showNotification("BeeZ Hub", "ÄÃ£ chuyá»ƒn sang: " .. mode, FARM_CONFIGS[mode].color)
    updateUI()
    return true
end

-- Hiá»ƒn thá»‹ notification
local function showNotification(title, message, color)
    local notification = Instance.new("Frame")
    notification.Name = "Notification"
    notification.Size = UDim2.new(0, 300, 0, 70)
    notification.Position = UDim2.new(1, 10, 0.1, 0)
    notification.BackgroundColor3 = WIND_THEME.card
    notification.BackgroundTransparency = 0.8
    
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 12)
    corner.Parent = notification
    
    local stroke = Instance.new("UIStroke")
    stroke.Color = color
    stroke.Thickness = 2
    stroke.Transparency = 0.5
    stroke.Parent = notification
    
    local titleLabel = Instance.new("TextLabel")
    titleLabel.Name = "Title"
    titleLabel.Size = UDim2.new(1, -20, 0, 25)
    titleLabel.Position = UDim2.new(0, 10, 0, 5)
    titleLabel.BackgroundTransparency = 1
    titleLabel.Text = title
    titleLabel.TextColor3 = color
    titleLabel.TextSize = 16
    titleLabel.Font = Enum.Font.GothamBold
    titleLabel.TextXAlignment = Enum.TextXAlignment.Left
    titleLabel.Parent = notification
    
    local messageLabel = Instance.new("TextLabel")
    messageLabel.Name = "Message"
    messageLabel.Size = UDim2.new(1, -20, 0, 35)
    messageLabel.Position = UDim2.new(0, 10, 0, 30)
    messageLabel.BackgroundTransparency = 1
    messageLabel.Text = message
    messageLabel.TextColor3 = WIND_THEME.text
    messageLabel.TextSize = 14
    messageLabel.Font = Enum.Font.Gotham
    messageLabel.TextXAlignment = Enum.TextXAlignment.Left
    messageLabel.Parent = notification
    
    notification.Parent = WindUI.ScreenGui
    
    -- Animation
    TweenService:Create(notification, TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
        Position = UDim2.new(1, -310, 0.1, 0)
    }):Play()
    
    -- Auto remove
    spawn(function()
        wait(3)
        TweenService:Create(notification, TweenInfo.new(0.3), {
            Position = UDim2.new(1, 10, 0.1, 0),
            BackgroundTransparency = 1
        }):Play()
        wait(0.3)
        notification:Destroy()
    end)
end

-- Khá»Ÿi táº¡o
local function initialize()
    -- Chá» player load
    repeat wait() until player.Character
    
    -- Táº¡o UI
    WindUI = createWindUI()
    
    -- Hiá»‡u á»©ng xuáº¥t hiá»‡n
    WindUI.MainContainer.Size = UDim2.new(0, 0, 0, 0)
    WindUI.MainContainer.Position = UDim2.new(0.5, 0, 0.5, 0)
    
    TweenService:Create(WindUI.MainContainer, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
        Size = UDim2.new(0, 900, 0, 600),
        Position = UDim2.new(0.5, -450, 0.5, -300)
    }):Play()
    
    -- Welcome notification
    showNotification("ğŸ BeeZ Hub", "Wind UI Ä‘Ã£ sáºµn sÃ ng!", WIND_COLORS.primary)
    
    -- Auto update UI
    spawn(function()
        while true do
            wait(0.5)
            updateUI()
        end
    end)
    
    print("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
    print("ğŸ BeeZ Hub - Wind UI")
    print("âœ¨ UI Ä‘Ã£ tá»± Ä‘á»™ng xuáº¥t hiá»‡n!")
    print("ğŸ® Click vÃ o cÃ¡c nÃºt Ä‘á»ƒ báº¯t Ä‘áº§u farm")
    print("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
end

-- Cháº¡y khá»Ÿi táº¡o
spawn(initialize)

-- Toggle UI vá»›i phÃ­m (tÃ¹y chá»n)
UserInputService.InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.RightShift then
        toggleUIVisibility()
    end
end)

-- Export API
return {
    ToggleFarm = toggleAutoFarm,
    ChangeMode = changeFarmMode,
    ToggleUI = toggleUIVisibility,
    ShowNotification = showNotification,
    GetStats = function() return farmStats end
}
