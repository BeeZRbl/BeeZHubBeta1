    primary = Color3.fromRGB(66, 133, 244),      -- Google Blue
    secondary = Color3.fromRGB(52, 168, 83),     -- Google Green
    accent = Color3.fromRGB(251, 188, 5),        -- Google Yellow
    danger = Color3.fromRGB(234, 67, 53),        -- Google Red
    dark = Color3.fromRGB(32, 33, 36),           -- Dark Gray
    darker = Color3.fromRGB(23, 24, 28),         -- Darker Gray
    light = Color3.fromRGB(232, 234, 237),       -- Light Gray
    success = Color3.fromRGB(15, 157, 88),       -- Success Green
    warning = Color3.fromRGB(249, 171, 0),       -- Warning Orange
    info = Color3.fromRGB(66, 133, 244)          -- Info Blue
}

-- Wind UI Theme
